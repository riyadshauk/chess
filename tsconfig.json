{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "**/src/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "test_project"
    ]
}